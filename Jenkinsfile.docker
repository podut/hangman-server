pipeline {
    agent {
        docker {
            image 'python:3.10-slim'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    
    environment {
        // TEMP: Hardcoded for testing (replace with credentials('hangman-secret-key') in production)
        SECRET_KEY = 'dev-secret-key-minimum-32-chars-long-for-development-only'
        DEBUG = 'false'
    }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 20, unit: 'MINUTES')
        timestamps()
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Validate Secrets') {
            steps {
                script {
                    echo 'ğŸ”‘ Validating required credentials...'
                    
                    if (!env.SECRET_KEY) {
                        error "âŒ Missing SECRET_KEY environment variable!"
                    }
                    
                    echo "âœ… SECRET_KEY present (length: ${env.SECRET_KEY.length()} chars)"
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh '''
                    pip install --upgrade pip
                    cd server
                    pip install -r requirements.txt
                '''
            }
        }
        
        stage('Run Tests') {
            steps {
                sh '''
                    pytest server/tests/test_new_features.py -v \
                        --cov=server/src \
                        --cov-report=xml \
                        --junitxml=test-results.xml
                '''
            }
            
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }
        
        stage('Coverage Report') {
            steps {
                sh 'coverage report'
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipeline succeeded!'
        }
        
        failure {
            echo 'âŒ Pipeline failed!'
        }
        
        always {
            script {
                echo 'ğŸ§¹ Cleaning up test environment...'
                
                // Clean workspace - must run inside node context
                node {
                    // Forcefully remove all test artifacts in Docker
                    sh '''
                        echo "ğŸ—‘ï¸ Removing Python cache and temp files..."
                        find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
                        find . -type f -name "*.pyc" -delete 2>/dev/null || true
                        find . -type f -name "*.pyo" -delete 2>/dev/null || true
                        
                        echo "ğŸ—‘ï¸ Removing test artifacts..."
                        rm -rf .coverage coverage.xml test-results.xml || true
                        rm -rf .pytest_cache .mypy_cache || true
                        
                        echo "âœ… Cleanup complete!"
                    '''
                    
                    // Final workspace cleanup (removes everything)
                    cleanWs(
                        deleteDirs: true,
                        disableDeferredWipeout: true,
                        notFailBuild: true
                    )
                }
                
                echo 'ğŸ¯ Test environment completely removed'
            }
        }
    }
}
